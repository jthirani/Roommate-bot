<div id="login">
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div class="login-box col-md-12">
                    <form id="login-form" class="form" action="" method="post">
                        <h3 class="text-center has-text-white">Sign Up</h3>
                        <div class="form-group">
                            <label for="username" class="has-text-white">Username:</label><br>
                            <input type="text" name="username" id="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="has-text-white">Password:</label><br>
                            <input type="text" name="password" id="password" class="form-control">
                            <br>
                            <input type="submit" name="Sign Up" class="btn btn-info btn-md" value="Sign Up">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>